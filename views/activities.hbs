 <script src="/functions/delete-functions.js"></script>

        <h1>Activities</h1>
    <p>Activity list</p>
    <table class="main-table">
       <thead>

            <tr>
                {{#each data.[0]}}
                <th>
                    {{@key}}
                </th>
                {{/each}}
                <th>Delete</th>
            </tr>
        </thead>

        <tbody>

            {{#each data}}
            <tr>
                <td>{{this.activityID}}</td>
                <td>{{this.name}}</td>
                <td>{{this.equipmentID}}</td>
                 <td><button onclick="deleteActivity({{ this.activityID }})">Delete</button></td>
            </tr>
            {{/each}}
        </tbody>
        
    </table>
    <div class="section">    
        <h2>Add an activity</h2>
        <form method="POST" id="addActivity" action="add-activity">
            <table class='sub-table'>
                 <tr>
                    <td><label for='name'>Name:</label></td>
                    <td><input type="text" id="name" name="name" required></td>
                    <td>*Required</td>
                </tr>
                <tr>
                    <td><label for='equipmentID'>Equipment ID:</label></td>
                    <td><input type="number" id="equipmentID" name="equipmentID" required></td>
                    <td>*Required</td>
                </tr>
            </table>
    <div class="form-btns">
        <input type="submit" value="Add">
    </div>
        
      </form> 
    </div>



